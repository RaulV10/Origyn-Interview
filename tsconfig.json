{
    "compilerOptions": {
      "target": "esnext",
      "module": "ESNext",
      "strict": true,
      "noEmit": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "jsx": "react",
      "sourceMap": true,
      "moduleResolution": "Node",
      "resolveJsonModule": true, 
      "plugins": [{"name": "typescript-plugin-css-modules"}]
    },
    "include": ["./frontend/**/*", "./backend/**/*"]
  }
  